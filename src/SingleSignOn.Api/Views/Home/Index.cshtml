        <div class="card mb-4 box-shadow">
            <div class="card-header">
                <h4 class="my-0 font-weight-normal">Swagger Auth Server</h4>
            </div>
            <div class="card-body">
                <h1 class="card-title">
                    <span title="Swagger Auth Server" class="font-size-1" aria-hidden="true"><i class="fas fa-file-code"></i></span>
                </h1>
                <a href="https://localhost:5000/swagger/index.html" class="btn btn-lg btn-block btn-primary" target="_blank">Manage</a>
            </div>
        </div>
